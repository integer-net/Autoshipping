<config>
    <modules>
        <IntegerNet_Autoshipping>
            <version>0.3.0</version>
        </IntegerNet_Autoshipping>
    </modules>
    <global>
        <helpers>
            <autoshipping>
                <class>IntegerNet_Autoshipping_Helper</class>
            </autoshipping>
        </helpers>

        <models>
            <autoshipping>
                <class>IntegerNet_Autoshipping_Model</class>
            </autoshipping>
            <sales>
                <rewrite>
                    <quote_address>IntegerNet_Autoshipping_Model_Quote_Address</quote_address>
                </rewrite>
            </sales>
        </models>

        <blocks>
            <autoshipping>
                <class>IntegerNet_Autoshipping_Block</class>
            </autoshipping>
            <tax>
                <rewrite>
                    <checkout_shipping>IntegerNet_Autoshipping_Block_Tax_Checkout_Shipping</checkout_shipping>
                </rewrite>
            </tax>
        </blocks>
    </global>
    <frontend>
        <events>
            <checkout_cart_save_before>
                <observers>
                    <autoshipping>
                        <type>singleton</type>
                        <class>autoshipping/observer</class>
                        <method>prepareShippingAddress</method>
                    </autoshipping>
                </observers>
            </checkout_cart_save_before>
            <checkout_cart_save_after>
                <observers>
                    <autoshipping>
                        <type>singleton</type>
                        <class>autoshipping/observer</class>
                        <method>addShipping</method>
                    </autoshipping>
                </observers>
            </checkout_cart_save_after>
            <core_block_abstract_to_html_before>
                <observers>
                    <autoshipping>
                        <type>singleton</type>
                        <class>autoshipping/observer</class>
                        <method>beforeBlockToHtml</method>
                    </autoshipping>
                </observers>
            </core_block_abstract_to_html_before>
            <controller_action_predispatch_checkout_cart_index>
                <observers>
                    <autoshipping>
                        <type>singleton</type>
                        <class>autoshipping/observer</class>
                        <method>controllerActionPredispatchCheckoutCartIndex</method>
                    </autoshipping>
                </observers>
            </controller_action_predispatch_checkout_cart_index>
        </events>

        <translate>
            <modules>
                <IntegerNet_Autoshipping>
                    <files>
                        <default>IntegerNet_Autoshipping.csv</default>
                    </files>
                </IntegerNet_Autoshipping>
            </modules>
        </translate>

        <routers>
            <autoshipping>
                <use>standard</use>
                <args>
                    <module>IntegerNet_Autoshipping</module>
                    <frontName>autoshipping</frontName>
                </args>
            </autoshipping>
        </routers>
    </frontend>

    <adminhtml>
        <translate>
            <modules>
                <IntegerNet_Autoshipping>
                    <files>
                        <default>IntegerNet_Autoshipping.csv</default>
                    </files>
                </IntegerNet_Autoshipping>
            </modules>
        </translate>

        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <autoshipping>
                                            <title>Auto Shipping</title>
                                        </autoshipping>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>

    <default>
        <autoshipping>
            <settings>
                <show_country_selection_in_cart>1</show_country_selection_in_cart>
            </settings>
        </autoshipping>
    </default>
</config>
